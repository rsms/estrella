{
  "name": "estrella",
  "version": "1.2.10",
  "description": "Versatile build tool based on the esbuild compiler",
  "main": "dist/estrella.js",
  "bin": {
    "estrella": "dist/estrella.js"
  },
  "types": "estrella.d.ts",
  "directories": {
    "example": "examples"
  },
  "files": [
    "LICENSE.txt",
    "README.md",
    "estrella.d.ts",
    "dist/estrella.js",
    "dist/estrella.js.map",
    "dist/debug.js",
    "dist/debug.js.map",
    "dist/watch.js",
    "dist/watch.js.map",
    "dist/npm-postinstall.js",
    ".gitignore"
  ],
  "scripts": {
    "build": "node build.js",
    "build-rescue": "esbuild --platform=node --minify-whitespace --bundle --outfile=dist/estrella.js --external:esbuild --external:fsevents --define:DEBUG=1 --define:VERSION='\"0.0.0-rescue\"' src/estrella.js && chmod +x dist/estrella.js && echo 'Wrote dist/estrella.js'",
    "test": "bash test/test.sh",
    "postinstall": "node dist/npm-postinstall.js"
  },
  "author": "Rasmus Andersson <rsms.me>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rsms/estrella.git"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "optionalDependencies": {
    "fsevents": "~2.1.2"
  },
  "dependencies": {
    "esbuild": ">=0.6.0 <0.8.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "@types/source-map-support": "^0.5.3",
    "chokidar": "^3.4.2",
    "miniglob": "^0.1.1",
    "source-map-support": "^0.5.19",
    "typescript": "^4.0.3"
  }
}
